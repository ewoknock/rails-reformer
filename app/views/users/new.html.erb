<h1>Create New User</h1>

<form action="/users" method="post" class="new-user-form" accept-charset="UTF-8">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <div class="form-element">
        <label for="username">Username:</label>
        <input id="username" name="user[username]" type="text" value="<%= @user.username %>">
    </div>
    <div class="form-element">
        <label for="email">Email:</label>
        <input id="email" name="user[email]" type="email" placeholder="user@email.com" value="<%= @user.email %>">
    </div>
    <div class="form-element">
        <label for="password">Password:</label>
        <input id="password" name="user[password]" type="password" value="<%= @user.password %>">
    </div>
    <button type="submit">Create Account</button>
</form>